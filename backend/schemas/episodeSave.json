{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/companyNew.schema.json",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "episodeId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "data": {
      "rating": {
        "type": "integer", 
        "minimum": 1, 
        "maximum": 5
      },
      "notes": {
        "type": "string"
      }, 
      "dateListened": {
        "type": "string", 
        "format": "date"
      },
      "timeStopped": {
        "type": "string", 
        "format": "time"
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "username",
    "episodeId"
  ]
}
